{
  "name": "bot-admin",
  "version": "0.1.0",
  "description": "CLI tool for managing AI chatbot implementations, clients, and reusable blueprints",
  "type": "module",
  "bin": {
    "bot": "./dist/index.js"
  },
  "scripts": {
    "dev": "npm run dev --prefix web",
    "dev:cli": "tsx src/index.ts",
    "build": "npm run build --prefix web",
    "build:cli": "tsup src/index.ts --format esm --dts --clean",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@clack/prompts": "^0.9.1",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.3",
    "nanoid": "^5.1.2",
    "postgres": "^3.4.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "drizzle-kit": "^0.30.5",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
